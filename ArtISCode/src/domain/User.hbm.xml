<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="domain">
	<class name="User"  table="USER" >
	
		<id name="id" type="java.lang.Long" column="User_id">
			<generator class="increment"/>
		</id>	
		
		
	
		
		<property name="login" column="LOGIN" type="string">
			
		</property>
		
		<property name="firstname" column="FIRSTNAME" type="string">
			
		</property>
		
		<property name="lastname" column="LASTNAME" type="string">
			
		</property>	
		
		<property name="password" column="PASSWORD" type="string">
			
		</property>	
		
		
		<many-to-one name="address" column="ADDRESS" unique="true" not-null="false" inverse="true"></many-to-one>
		

		<joined-subclass name="domain.Artist" table="ARTIST">
		  <key column="User_id"/>
		  <property name="email" column="EMAIL" type="string"></property>
		  <property name="description" column="DESCRIPTION" type="string"></property>
		  
		  <set name="tag" table="ARTIST&TAG">
		  <key column="User_id"></key>
		  <many-to-many class="domain.Tag" column="Tag_id"></many-to-many>
		</set>
		  
		</joined-subclass>
		
		<joined-subclass name="domain.Entertainment_Pro" table="ENTERTAINMENT">
		  <key column="User_id"/>
		  <property name="description" column="DESCRIPTION" type="string"></property>
		</joined-subclass>
		
	</class>
</hibernate-mapping>